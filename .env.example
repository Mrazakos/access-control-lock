# Application Mode
MODE=API
# Options: API, NFC, IOT

# Server Configuration
PORT=3000
NODE_ENV=development

# Lock Configuration
LOCK_ID=1
# The specific lock ID this instance monitors

# Network Configuration
NETWORK=sepolia
# Options: sepolia (testnet), mainnet

# Ethereum Configuration - Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
SEPOLIA_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
SEPOLIA_START_BLOCK=0

# Ethereum Configuration - Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
MAINNET_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
MAINNET_START_BLOCK=0

# Blockchain Settings
POLL_INTERVAL=12000
CONFIRMATIONS=3

# Hybrid Sync Configuration
BATCH_SYNC_INTERVAL_MINUTES=15
BATCH_SYNC_SIZE=1000

# Database Configuration
DATABASE_PATH=./data/vcel.db

# MQTT Configuration (Optional - for IoT mode)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=vcel-client
MQTT_USERNAME=
MQTT_PASSWORD=

# DID Configuration
DID_RESOLVER_REGISTRY_URL=https://uniresolver.io/1.0/identifiers/

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug, verbose

# NFC Configuration (for future NFC mode)
NFC_READER_PORT=/dev/ttyUSB0
NFC_POLLING_INTERVAL=1000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000
